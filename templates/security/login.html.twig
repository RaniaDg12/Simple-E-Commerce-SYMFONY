{% extends 'base.html.twig' %}

{% block title %}Hello E-Commerce Site!{% endblock %}

{% block body %}
<h1>Log In !</h1>
<form action="{{ path('security_login') }}" method="post">
    <div class="form-group">
        <input type="text" placeholder="Mail Adress" required name="_username" class="form-control">
    </div>
    <br>
    <div class="form-group">
        <input type="password" placeholder="Password" required name="_password" class="form-control">
    </div>
    <br>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Login</button>     
    </div>
</form>

{% endblock %}