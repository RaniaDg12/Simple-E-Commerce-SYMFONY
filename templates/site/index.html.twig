{% extends 'base.html.twig' %}

{% block title %}Hello E-Commerce Site!{% endblock %}

{% block body %}
    <div class="bg-light p-3">
        <h1>Our Products</h1>
    </div>

    <div class="row">
        {% for product in products %}
            <div class="col-4 mt-4">
                <div class="border border-dark rounded p-2 clearfix">
                    <h2>
                        {{ product.title }}
                        -
                        {{ product.price }} 
                        TND
                    </h2>
                    <img class="img-fluid rounded" src="{{ product.image }}" alt="Image de {{ product.title }}">
                    {{ product.description | raw }}
                    <a href="{{ path('site_show', {'id': product.id}) }}" class="btn btn-primary">Read more</a>
                    <hr>
                    <a href="{{ path('panier_add', {'id': product.id}) }}" class="btn btn-success float-right">
                        <i class="fas fa-shopping-cart mr-1"></i>
                        Ajouter
                    </a>
                </div>

            </div>
        {% endfor %}
    </div>



{% endblock %}



